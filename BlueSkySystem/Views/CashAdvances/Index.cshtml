@model List<CashAdvance>

<h1>Cash Advance Overview</h1>

<div class="row mb-5">
    <div class="col">
        <p>
            <a class="btn btn-primary" asp-controller="CashAdvances" asp-action="Create">Apply Cash Advance</a>
        </p>
    </div>
    <div class="col"></div>
</div>

<table class="table">
    <thead class="table-dark">
        <tr>
            <th>No.</th>
            <th>Name</th>
            <th>Department</th>
            <th>Purpose</th>
            <th>Amount</th>
            <th>E-signature</th>
            <th>Cover Letter</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cashadvances in Model)
        {
            <tr>
                <td>@cashadvances.Id</td>
                <td>@cashadvances.FullName</td>
                <td>@cashadvances.Department</td>
                <td>@cashadvances.Purpose</td>
                <td>₱@(cashadvances.Amount.ToString("N2"))</td>
                <td>
                    @if (!string.IsNullOrEmpty(cashadvances.ImageFileName1))
                    {
                        <img src="/ESignature/@cashadvances.ImageFileName1" width="100" alt="E-signature for @cashadvances.FullName" />
                    }
                    else
                    {
                        <span>No signature available</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(cashadvances.CoverLetterName))
                    {
                        <a href="@Url.Action("DownloadCoverLetter", "CashAdvances", new { fileName = cashadvances.CoverLetterName })" target="_blank">Download Cover Letter</a>
                    }
                    else
                    {
                        <span>No cover letter uploaded</span>
                    }
                </td>
                <td>@cashadvances.CashAdvanceStatus?.Name</td> <!---- Display the Status Name -->
                <td>
                    <div class="input-group">
                        <button type="button" class="btn btn-warning btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                            Action
                        </button>
                        <ul class="dropdown-menu">
                            <li class="dropdown-item">
                                <a asp-action="Edit" asp-route-id="@cashadvances.Id" class="btn btn-primary btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                            </li>
                            <li class="dropdown-item">
                                <a asp-action="Details" asp-route-id="@cashadvances.Id" class="btn btn-warning btn-sm"><i class="bi bi-eye"></i> Details</a>
                            </li>
                            <li class="dropdown-item">
                                <a asp-action="Delete" asp-route-id="@cashadvances.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')"><i class="bi bi-trash"></i> Delete</a>
                            </li>
                            <li class="dropdown-item">
                                <a asp-action="ApproveCashAdvance" asp-route-id="@cashadvances.Id" class="btn btn-success btn-sm"><i class="bi bi-check"></i> Approve</a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

